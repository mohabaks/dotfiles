#!/bin/bash
#
# Description: Script to generate zathurarc based on color generated by wal.
#

# Load colors
. $HOME/.local/bin/color-parser

cat <<EOF
# ▒███████▒ ▄▄▄     ▄▄▄█████▓ ██░ ██  █    ██  ██▀███   ▄▄▄       ██▀███   ▄████▄  
# ▒ ▒ ▒ ▄▀░▒████▄   ▓  ██▒ ▓▒▓██░ ██▒ ██  ▓██▒▓██ ▒ ██▒▒████▄    ▓██ ▒ ██▒▒██▀ ▀█  
# ░ ▒ ▄▀▒░ ▒██  ▀█▄ ▒ ▓██░ ▒░▒██▀▀██░▓██  ▒██░▓██ ░▄█ ▒▒██  ▀█▄  ▓██ ░▄█ ▒▒▓█    ▄ 
# ▄▀▒   ░░██▄▄▄▄██░ ▓██▓ ░ ░▓█ ░██ ▓▓█  ░██░▒██▀▀█▄  ░██▄▄▄▄██ ▒██▀▀█▄  ▒▓▓▄ ▄██▒
# ▒███████▒ ▓█   ▓██▒ ▒██▒ ░ ░▓█▒░██▓▒▒█████▓ ░██▓ ▒██▒ ▓█   ▓██▒░██▓ ▒██▒▒ ▓███▀ ░
# ░▒▒ ▓░▒░▒ ▒▒   ▓▒█░ ▒ ░░    ▒ ░░▒░▒░▒▓▒ ▒ ▒ ░ ▒▓ ░▒▓░ ▒▒   ▓▒█░░ ▒▓ ░▒▓░░ ░▒ ▒  ░
# ░░▒ ▒ ░ ▒  ▒   ▒▒ ░   ░     ▒ ░▒░ ░░░▒░ ░ ░   ░▒ ░ ▒░  ▒   ▒▒ ░  ░▒ ░ ▒░  ░  ▒   
# ░ ░ ░ ░ ░  ░   ▒    ░       ░  ░░ ░ ░░░ ░ ░   ░░   ░   ░   ▒     ░░   ░ ░        
# ░ ░          ░  ░         ░  ░  ░   ░        ░           ░  ░   ░     ░ ░      
# ░                                                                       ░        
#  

set font                        "Iosevka Slab 9"
set default-bg                  "$BG" #00
set default-fg                  "$FG" #01

set statusbar-fg                "$FG"    #04
set statusbar-bg                "$BLACK" #01

set inputbar-bg                 "$BLACK" #00 currently not used
set inputbar-fg                 "$BBLACK" #02

set notification-error-bg       "$CYAN" #08
set notification-error-fg       "$FG" #00

set notification-warning-bg     "$GREEN" #08
set notification-warning-fg     "$WHITE" #00

set highlight-color             "$BBLACK" #0A
set highlight-active-color      "$FG" #0D

set completion-highlight-fg     "$BWHITE"  #02
set completion-highlight-bg     "$MAGENTA" #0C

set completion-bg               "$BG" #02
set completion-fg               "$FG" #0C

set notification-bg             "$YELLOW" #0B
set notification-fg             "$WHITE" #00

set recolor-lightcolor          "$BG" #00
set recolor-darkcolor           "$FG" #06
set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
# if it is false, itll just be black and white
set recolor-keephue             "false"
# Copy to clipboard
set selection-clipboard clipboard
set sandbox none

# Rest of your configs go here:
EOF
